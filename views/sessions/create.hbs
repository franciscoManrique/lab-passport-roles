<h3 style="font-weight:100; margin-left:300px;">SIGN UP</h3>
<div class="col-sm-6">
    <form method="POST" action="/sessions/create">
        <div class="form-group">
            <label for="formGroupExampleInput">email</label>
            <input type="text" class="form-control" {{#if errors}}style="border:1px solid red;"{{/if}} placeholder="Email" name="email" id="email" value="{{user.email}}">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Password</label>
            <input type="password" class="form-control"  {{#if errors}} style="border:1px solid red;"{{/if}} placeholder="Password" name="password" id="password" value="{{user.password}}">
        </div>
        <button type="submit" class="btn btn-primary">Log in</button>
    </form>
</div>
